{
  "name": "@adonisjs/shield",
  "version": "7.1.1",
  "description": "A middleware for AdonisJS to keep web applications secure from common web attacks",
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/stubs",
    "build/providers",
    "build/index.d.ts",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./shield_provider": "./build/providers/shield_provider.js",
    "./shield_middleware": "./build/src/shield_middleware.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copy:templates",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels .github/labels.json adonisjs/ally",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts"
  },
  "type": "module",
  "keywords": [
    "adonisjs",
    "adonis",
    "web-security",
    "csrf",
    "csp"
  ],
  "peerDependencies": {
    "@adonisjs/core": "6.1.5-10",
    "@adonisjs/session": "7.0.0-0",
    "@adonisjs/view": "7.0.0-5",
    "@japa/api-client": "2.0.0-0"
  },
  "peerDependenciesMeta": {
    "@adonisjs/view": {
      "optional": true
    }
  },
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/core": "6.1.5-10",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@adonisjs/session": "7.0.0-0",
    "@adonisjs/tsconfig": "^1.1.8",
    "@adonisjs/view": "7.0.0-5",
    "@japa/api-client": "2.0.0-0",
    "@japa/assert": "2.0.0-1",
    "@japa/file-system": "2.0.0-1",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "3.0.0-6",
    "@japa/spec-reporter": "^1.3.3",
    "@poppinss/dev-utils": "^2.0.3",
    "@swc/core": "^1.3.70",
    "@types/csrf": "^3.1.0",
    "@types/node": "^18.7.6",
    "c8": "^8.0.0",
    "commitizen": "^4.3.0",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "mrm": "^4.1.14",
    "np": "^7.6.2",
    "prettier": "^2.8.8",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@poppinss/utils": "6.5.0-3",
    "csrf": "^3.1.0",
    "helmet-csp": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/shield.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/shield/issues"
  },
  "homepage": "https://github.com/adonisjs/shield#readme",
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "adonisjs": {
    "instructionsMd": "./build/instructions.md",
    "types": "@adonisjs/shield",
    "providers": [
      "@adonisjs/shield"
    ],
    "templates": {
      "config": [
        "shield.txt"
      ]
    }
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "mrmConfig": {
    "core": true,
    "license": "MIT",
    "services": [
      "github-actions"
    ],
    "minNodeVersion": "14.15.4",
    "probotApps": [
      "stale",
      "lock"
    ],
    "runGhActionsOnWindows": true
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
