{
  "name": "@adonisjs/shield",
  "description": "A middleware for AdonisJS to keep web applications secure from common web attacks",
  "version": "8.0.0-1",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/providers",
    "build/src",
    "build/stubs",
    "build/index.d.ts",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./shield_provider": "./build/providers/shield_provider.js",
    "./shield_middleware": "./build/src/shield_middleware.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copy:templates",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels .github/labels.json adonisjs/shield",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^6.1.3-22",
    "@adonisjs/core": "^6.1.5-25",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/session": "^7.0.0-10",
    "@adonisjs/tsconfig": "^1.1.8",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@japa/assert": "^2.0.0-1",
    "@japa/runner": "^3.0.0-6",
    "@swc/core": "^1.3.70",
    "@types/node": "^20.4.3",
    "c8": "^8.0.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "edge.js": "^6.0.0-10",
    "eslint": "^8.45.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@poppinss/utils": "^6.5.0-6",
    "csrf": "^3.1.0",
    "helmet-csp": "^3.4.0"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-25",
    "@adonisjs/session": "^7.0.0-10",
    "edge.js": "^6.0.0-10"
  },
  "peerDependenciesMeta": {
    "edge.js": {
      "optional": true
    }
  },
  "author": "virk",
  "license": "MIT",
  "homepage": "https://github.com/adonisjs/shield#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/shield.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/shield/issues"
  },
  "keywords": [
    "adonisjs",
    "adonis",
    "web-security",
    "csrf",
    "csp"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "test_helpers/**",
      "stubs/**"
    ]
  }
}
